{
  "name": "my-super-awesome-project",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && yarn build:server && yarn build:client",
    "build:client": "webpack --config webpack.client.config.prod.js",
    "build:server": "webpack --config webpack.server.config.js",
    "clean": "node ./scripts/clean.js",
    "start": "concurrently \"yarn start:server\" \"yarn start:client\"",
    "start:server": "nodemon -r dotenv/config ./src/server/server.ts",
    "start:client": "webpack serve --config webpack.client.config.dev --open",
    "test": "yarn test:typescript && yarn test:eslint",
    "test:eslint": "eslint .",
    "test:typescript": "tsc -p ./tsconfig.json --noEmit",
    "prepare": "husky install",
    "postinstall": "husky install && npx husky add .husky/pre-commit \"yarn test\" && npx husky add .husky/pre-push \"yarn test\""
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@types/express": "^4.17.13",
    "@types/node": "^16.7.1",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/serve-favicon": "^2.5.3",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "babel-loader": "^8.2.2",
    "chalk": "^4.1.2",
    "css-loader": "^6.2.0",
    "del": "^6.0.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "style-loader": "^3.2.1",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.0.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "concurrently": "^6.2.1",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "serve-favicon": "^2.5.0"
  },
  "nodemonConfig": {
    "delay": 2500
  }
}
